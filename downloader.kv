#:kivy 1.11.1
#:import Window kivy.core.window.Window
#:import Clipboard kivy.core.clipboard.Clipboard
#:import Factory kivy.factory.Factory

<ActionBarMain>:
    pos_hint: {'top':1}
    ActionView:
        use_separator: True
        ActionPrevious:
            app_icon: ''
            with_previous: False
        ActionOverflow:
        ActionButton:
            on_release: app.url = Clipboard.paste()
            Image:
                x: self.parent.x
                y: self.parent.y
                size: self.parent.size
                stretch: True
                source: 'img/clipboard.png'
        ActionButton:
            on_press: app.open_settings()
            Image:
                x: self.parent.x
                y: self.parent.y
                size: self.parent.size
                stretch: True
                source: 'img/work.png'
        ActionButton:
            on_release: Factory.AboutPopup().open()
            Image:
                x: self.parent.x
                y: self.parent.y
                size: self.parent.size
                stretch: True
                source: 'img/info.png'

<AboutPopup@Popup>:
    auto_dismiss: False
    title: 'About'
    BoxLayout:
        orientation: 'vertical'
        ScrollView:
            Label:
                id: about_label
                text: root.about_text
                size: self.texture_size
                text_size: self.width, None
                size_hint: 1, None
                height: self.texture_size[1]
        Button:
            text: 'Close'
            on_release: root.dismiss()
            size_hint_y: None

<LogPopup>:
    auto_dismiss: False
    title: 'Log'
    BoxLayout:
        orientation: 'vertical'
        ScrollView:
            size_hint_y: .9
            Label:
                id: log_label
                text: root.log
                size: self.texture_size
                text_size: self.width, None
                size_hint: 1, None
                height: self.texture_size[1]
                markup: True
        Button:
            size_hint_y: .1
            text: 'Close'
            on_release: root.dismiss()
            height: '30dp'                     

<DownloaderLayout>:
    orientation: 'vertical'
    BoxLayout:
        size_hint_y: None
        TextInput:
            id: url_textinput
            hint_text: 'Enter url here'
            size_hint_y: None
            multiline: False
            text: app.url
            on_text: app.url = self.text
        Button:
            id: download_button
            on_press: root.on_press_button_download(app.url, app.ydl_opts)
            size_hint_y: None
            size_hint_x: 0.1
            Image:
                x: self.parent.x
                y: self.parent.y
                size: self.parent.size
                stretch: True
                source: 'img/down-arrow.png'
    RV:
        id: rv

<DownloadStatusBar>:
    padding: 3
    Label:
        id: url_label
        text: root.url
        text_size: self.width, None
        height: self.texture_size[1]
        size_hint_x: .6
    Label:
        id: status_label
        text: root.status
        height: self.texture_size[1]
        size_hint_x: .2
    Button:
        id: show_log_button
        text: 'Log'
        on_release: root.on_release_show_log_button()
        height: self.texture_size[1]
        size_hint_x: .2

<RV>:
    viewclass: 'DownloadStatusBar'
    RecycleBoxLayout:
        id: rbl
        default_size: None, dp(26)
        default_size_hint: 1, None
        size_hint_y: None
        height: self.minimum_height
        orientation: 'vertical'
        multiselect: True
        touch_multiselect: True

<RootLayout@BoxLayout>:
    BoxLayout:
        size: root.size
        pos: root.pos
        orientation: "vertical"
        ActionBarMain:
            id: action_bar_main
        DownloaderLayout:
            id: main_layout