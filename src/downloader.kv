#:kivy 1.11.1
#:import Window kivy.core.window.Window
#:import Clipboard kivy.core.clipboard.Clipboard

<ActionBarMain>:
    pos_hint: {'top':1}
    ActionView:
        use_separator: True
        ActionPrevious:
            app_icon: ''
            with_previous: False
        ActionOverflow:
        ActionButton:
            text: 'Clipboard'
            on_press: app.url = Clipboard.paste()
        ActionButton:
            text: 'Settings'
            on_press: root.on_press_settings_button()
        ActionButton:
            text: 'About'
            on_press: root.on_press_about_button()

<AboutPopup>:
    auto_dismiss: False
    title: 'About'
    BoxLayout:
        orientation: 'vertical'
        ScrollView:
            Label:
                id: about_label
                text: root.about_text
                size: self.texture_size
                text_size: self.width, None
                size_hint: 1, None
                height: self.texture_size[1]
        Button:
            text: 'Close'
            on_release: root.dismiss()
            size_hint_y: None

<LogPopup>:
    auto_dismiss: False
    title: 'Log'
    BoxLayout:
        orientation: 'vertical'
        ScrollView:
            size_hint_y: .9
            Label:
                id: log_label
                text: root.log
                size: self.texture_size
                text_size: self.width, None
                size_hint: 1, None
                height: self.texture_size[1]
                markup: True
        Button:
            size_hint_y: .1
            text: 'Close'
            on_release: root.dismiss()
            size_hint_y: None

<SettingsPopup>:
    title: 'Settings'
    GridLayout:
        cols: 2
        padding : 30,30
        spacing: 20, 20
        row_default_height: '30dp'

        TextInput:
            id: download_location
            hint_text: 'Download location'
            multiline: False
        Button:
            text: 'Select directory'
            on_release: root.show_download_location_dialog()

        CheckBox:
            key: 'verbose'
            on_active: app.set_param(self.key, self.active)
        Label:
            text: 'Print additional info'

        CheckBox:
            key: 'quiet'
            on_active: app.set_param(self.key, self.active)
        Label:
            text: 'Do not print messages'            

        CheckBox:
            key: 'nowarning'
            on_active: app.set_param(self.key, self.active)
        Label:
            text: 'Do not print out anything for warnings.'

        CheckBox:
            key: 'simulate'
            on_active: app.set_param(self.key, self.active)
        Label:
            text: 'Do not download the video files.'

        CheckBox:
            key: 'nocheckcertificate'
            on_active: app.set_param(self.key, self.active)
            active: app.ydl_opts['nocheckcertificate']
        Label:
            text: 'Do not verify SSL certificates'

        CheckBox:
            key: 'prefer_insecure'
            on_active: app.set_param(self.key, self.active)
        Label:
            text: 'Use HTTP instead of HTTPS to retrieve information.\nAt the moment, this is only supported by YouTube.'
            
        CheckBox:
            key: 'ignoreerrors'
            on_active: app.set_param(self.key, self.active)
        Label:
            text: 'Do not stop on download errors.'

        CheckBox:
            key: 'call_home'
            on_active: app.set_param(self.key, self.active)
        Label:
            text: 'allow to contact the youtube-dl servers for debugging.'                        

<DownloaderLayout>:
    orientation: 'vertical'
    BoxLayout:
        size_hint_y: None
        TextInput:
            id: url_textinput
            hint_text: 'Enter url here'
            size_hint_y: None
            multiline: False
            text: app.url
            on_text: app.url = self.text
        Button:
            id: download_button
            text:  'GO'
            on_press: root.on_press_button_download(app.url, app.ydl_opts)
            size_hint_y: None
            size_hint_x: 0.1
    RV:
        id: rv

<DownloadStatusBar>:
    Label:
        id: url_label
        text: root.url
        text_size: self.width, None
        height: self.texture_size[1]
    Label:
        id: status_label
        text: root.status
    Button:
        id: show_log_button
        text: 'Log'
        on_release: root.on_release_show_log_button()

<Downloadlocationdialog>:
    BoxLayout:
        size: root.size
        pos: root.pos
        orientation: "vertical"
        FileChooserListView:
            id: filechooser
            on_selection: text_input.text = self.selection and self.selection[0] or ''
        BoxLayout:
            size_hint_y: None
            height: 30
            Button:
                text: "Cancel"
                on_release: root.cancel()
            Button:
                text: "Save"
                on_release: root.save(filechooser.path, None)

<RV>:
    viewclass: 'DownloadStatusBar'
    RecycleBoxLayout:
        id: rbl
        default_size: None, dp(26)
        default_size_hint: 1, None
        size_hint_y: None
        height: self.minimum_height
        orientation: 'vertical'
        multiselect: True
        touch_multiselect: True

<RootLayout>:
    BoxLayout:
        size: root.size
        pos: root.pos
        orientation: "vertical"
        ActionBarMain:
            id: action_bar_main
        DownloaderLayout:
            id: main_layout