#:import Window kivy.core.window.Window
#:import Clipboard kivy.core.clipboard.Clipboard

<ActionBarMain>:
    pos_hint: {'top':1}
    ActionView:
        use_separator: True
        ActionPrevious:
            app_icon: ''
            with_previous: False
        ActionOverflow:
        ActionButton:
            text: 'Clipboard'
            on_press: app.url = Clipboard.paste()
        ActionButton:
            text: 'Settings'
            on_press: root.on_press_settings_button()
        ActionButton:
            text: 'About'
            on_press: root.on_press_about_button()

<AboutPopup>:
    auto_dismiss: False
    title: 'About'
    BoxLayout:
        orientation: 'vertical'
        ScrollView:
            Label:
                id: about_label
                text: root.about_text
                size: self.texture_size
                text_size: self.width, None
                size_hint: 1, None
                height: self.texture_size[1]
        Button:
            text: 'Close'
            on_release: root.dismiss()
            size_hint_y: None

<LogPopup>:
    auto_dismiss: False
    title: 'Log'
    BoxLayout:
        orientation: 'vertical'
        ScrollView:
            Label:
                id: log_label
                text: root.log
                size: self.texture_size
                text_size: self.width, None
                size_hint: 1, None
                height: self.texture_size[1]
        Button:
            text: 'Close'
            on_release: root.dismiss()
            size_hint_y: None

<SettingsPopup>:
    title: 'Settings'
    BoxLayout:
        orientation: 'horizontal'
        size_hint_y: None
        TextInput:
            id: download_location
            hint_text: 'Download location'
            size_hint_y: None
            multiline: False
        Button:
            text: 'Download location'
            on_release: root.show_download_location_dialog()

<DownloaderLayout>:
    orientation: 'vertical'
    BoxLayout:
        size_hint_y: None
        TextInput:
            id: url_textinput
            hint_text: 'Enter url here'
            size_hint_y: None
            multiline: False
            height: 30
            text: app.url
            on_text: app.url = self.text
        Button:
            id: download_button
            text:  'GO'
            on_press: root.on_press_button_download(app.url, app.outtmpl)
            size_hint_y: None
            size_hint_x: 0.1
            height: 30
    ScrollView:
        BoxLayout:
            id: downloads_status_bar_layout
            orientation: 'vertical'
            size_hint_y: None
            height: Window.height

<DownloadStatusBar>:
    Label:
        id: url_label
        text: root.url
        text_size: self.width, None
        height: self.texture_size[1]
    Label:
        id: status_label
        text: root.status
    Button:
        id: show_log_button
        text: 'Show log'
        on_release: root.on_release_show_log_button()

<Downloadlocationdialog>:
    text_input: text_input
    BoxLayout:
        size: root.size
        pos: root.pos
        orientation: "vertical"
        FileChooserListView:
            id: filechooser
            on_selection: text_input.text = self.selection and self.selection[0] or ''
        BoxLayout:
            size_hint_y: None
            height: 30
            Button:
                text: "Cancel"
                on_release: root.cancel()
            Button:
                text: "Save"
                on_release: root.save(filechooser.path)

<RootLayout>:
    BoxLayout:
        size: root.size
        pos: root.pos
        orientation: "vertical"
        ActionBarMain:
            id: action_bar_main
        DownloaderLayout:
            id: main_layout